// room script file

function oDoor_Look()
{
  Display ("This is the front door of your house.");
}

function oDoor_Interact()
{
  player.Walk(60, 171, eBlock);
  oDoor.Visible = false;
  aDoorOpen.Play();
  Wait(30);
  player.ChangeRoom(3, 163, 170);
}

function room_AfterFadeIn()
{
    if (player.PreviousRoom == 3)
    {
      aDoorClose.Play();
      oDoor.Visible = true;
    }
}

